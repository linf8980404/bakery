<link rel="stylesheet" href="/styles/main.css">
<%- include('../includes/header.ejs')%>
</head>
<body>
  <%- include('../includes/navbar.ejs') %>
  <div class="container-md">
    <div class="row mt-3 ">
            <% if (products.length > 0) { %>
            <ul class="list-group">
                <% products.forEach((product) => { %>
                <li class="list-group-item d-flex align-items-center justify-content-between border-light">
                    <h5 class="">
                      <img src="<%= product.imageUrl %>" class="card-img-top border-light w-25 " alt="<%= product.title %>">
                      <%= product.title %>
                        <small>(數量: <%= product.cartItem.quantity %>)</small>
                      </h5>
                      <form action="/cart-delete-item" method="POST">
                        <input type="hidden" value="<%= product.id %>" name="productId">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <button class="btn custom-btn" type="submit"><span class="fw-bold">刪除商品</span></button>&emsp;&emsp;&emsp;&emsp;
                      </form>
                </li>
                <% }) %>
            </ul>
            <hr class="my-5">
            <div class="text-center">
								訂購(總額: <%= amount %>)
            </div>
            &emsp;&emsp;<button type="submit" class="btn btn-primary">結帳</button>
          <% } else { %>
            <h1>&emsp;商品還未加入購物車<a style="text-decoration:none;" href="/">&emsp;回到商品頁</a></h1>
        </div>
    </div>
    <% } %>
  <%- include('../includes/footer.ejs') %>